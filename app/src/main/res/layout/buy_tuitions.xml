<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".share_ride">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Tuitions"
        android:textColor="#FF0000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:hint="Student Name"
        android:id="@+id/student_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/student_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Student Address" />

    <TextView
        android:id="@+id/student_class"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Class" />

    <TextView
        android:id="@+id/institution_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Institution Name" />

    <TextView
        android:id="@+id/curriculum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:hint="Curriculum" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:hint="Description" />

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/contact_sell"
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Take Offer"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>
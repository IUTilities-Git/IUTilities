<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".share_ride">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Rides"
        android:textColor="#FF0000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:hint="Phone Number"
        android:id="@+id/sharephone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"/>

    <EditText
        android:hint="To"
        android:id="@+id/shareto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:hint="From"
        android:id="@+id/sharefrom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:hint="Available Seats"
        android:id="@+id/shareseat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:hint="Time"
        android:id="@+id/sharetime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp" />

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/contact_sell"
        android:text="Share the ride"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/share_button"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>

</LinearLayout>